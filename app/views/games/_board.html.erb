<%= content_tag(:div, "", data: {
    controller: "chess",
    game_id: game.id,
    player_id: current_user.id,
    fen: game.fen,
    turn: game.turn[0],
    orientation: game.orientation(current_user)
}, style: "width: 400px") do %>
  <div id="board"></div>

  <strong>State:</strong>
  <%= content_tag(:div, "", data: {
      chess_target: "state"
    }) do %>
    <%= game.state %>
  <% end %>
  
  <%= content_tag(:div, "", data: {
      chess_target: "fen"
    }) do %>
    <%= game.fen %>
  <% end %>
<% end %>
<p>
<% if current_user.avatar.attached? %>
  <%= image_tag current_user.avatar, class: 'avatar' %>
<% end %>
</p>

<style>
      .avatar {
        width: 50px;
        height: 50px;
        background-size: cover;
        display: block;
        border-radius: 100px;
        -webkit-border-radius: 100px;
        -moz-border-radius: 100px;
      }
</style>